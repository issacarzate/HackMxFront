<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.issac.fitnessandroid.ShareActivity">

    <ImageButton
        android:id="@+id/imagenRutina"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/imagenadd"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/rutinaText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imagenRutina"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_x="0dp"
        android:layout_y="301dp"
        android:ems="10"
        android:hint="CuÃ©ntanos de tu rutina"
        android:inputType="textMultiLine"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="332dp" />

    <Button
        android:id="@+id/enviarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rutinaText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_x="153dp"
        android:layout_y="416dp"
        android:background="@color/colorPrimary"
        android:text="Enviar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="411dp" />
</RelativeLayout>
